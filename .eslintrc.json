{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    ".next",
    "node_modules",
    "public/**",
    "next-env.d.ts",
    "workbox-*.js",
    "fallback-*.js",
    "sw.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

